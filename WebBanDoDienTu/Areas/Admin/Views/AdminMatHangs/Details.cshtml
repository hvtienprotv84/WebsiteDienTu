@model WebBanDoDienTu.Models.MatHang

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}




<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chi tiết mặt hàng</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">ID mặt hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.IDMH)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên mặt hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenMH)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Loại mặt hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.LoaiMatHang.TenLoaiMH)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Mô tả </label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MoTa)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Mô tả chi tiết</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.MoTaChiTiet)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Đơn hàng</label>
                    <div class="col-sm-9 money">
                        @Html.DisplayFor(model => model.DonGia) VND
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày nhập hàng</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NgayNhapHang)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Hình ảnh1</label>
                    <div class="col-sm-9">
                        @{
                            var base641 = Convert.ToBase64String(Model.HinhAnh1);
                            var imgSrc1 = String.Format("data:image/gif;base64,{0}", base641);
                        }
                        <img src='@imgSrc1' style="width: 100px; height: 150px; border-radius:0%" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Hình ảnh2</label>
                    <div class="col-sm-9">
                        @{
                            var base642 = Convert.ToBase64String(Model.HinhAnh2);
                            var imgSrc2 = String.Format("data:image/gif;base64,{0}", base642);
                        }
                        <img src='@imgSrc2' style="width: 100px; height: 150px; border-radius:0%" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Hình ảnh3</label>
                    <div class="col-sm-9">
                        @{
                            var base643 = Convert.ToBase64String(Model.HinhAnh3);
                            var imgSrc3 = String.Format("data:image/gif;base64,{0}", base643);
                        }
                        <img src='@imgSrc3' style="width: 100px; height: 150px; border-radius:0%" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Hình ảnh4</label>
                    <div class="col-sm-9">
                        @{
                            var base644 = Convert.ToBase64String(Model.HinhAnh4);
                            var imgSrc4 = String.Format("data:image/gif;base64,{0}", base644);
                        }
                        <img src='@imgSrc4' style="width: 100px; height: 150px; border-radius:0%" />
                    </div>
                </div>
                <!--<a href="~/Admin/AdminMatHangs/Edit/@Model.IDMH">
                    <button style="width:100px; type="submit" class="btn btn-primary mr-2">Edit</button>
                    </a>

                    <a href="~/Admin/AdminMatHangs/Edit/@Model.IDMH">
                    <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                    </a>-->


                <a href="~/Admin/AdminMatHangs/Edit/@Model.IDMH">
                    <button style="min-width:120px;height:30px" type="button" class="btn btn-primary mr-2">Edit</button>
                </a>

                <a href="~/Admin/AdminMatHangs/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>