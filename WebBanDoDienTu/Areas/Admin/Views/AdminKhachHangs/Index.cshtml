@model IEnumerable<WebBanDoDienTu.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách khách hàng</h2>

            <a href="~/Admin/AdminKhachHangs/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một khách hàng mới</button>
            </a>
            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                <input type="text" class="form-control" placeholder="Tìm kiếm theo tên khách hàng" name="tenKH">
            </form>

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Tên khách hàng
                            </th>
                            <th style="color:white">
                                Số điện thoại
                            </th>
                            <th style="color:white">
                                Địa chỉ giao hàng 1
                            </th>
                            <th style="color:white">
                                Email
                            </th>
                            <th style="color:white">
                                Điểm tích lũy
                            </th>
                            <th style="color:white">
                                Điểm tích lũy còn lại
                            </th>
                            <th style="color:white">
                                Loại khách hàng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChiGiaoHang1)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.DiemTichLuy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiemTichLuyConLai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiKhachHang)
                                </td>

                                <td>
                                    <a href="~/Admin/AdminKhachHangs/Details/@item.IDKH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminKhachHangs/Edit/@item.IDKH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminKhachHangs/Delete/@item.IDKH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>