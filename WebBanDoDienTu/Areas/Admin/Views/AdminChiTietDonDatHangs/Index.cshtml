@model IEnumerable<WebBanDoDienTu.Models.ChiTietDonDatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách chi tiết các sản phẩm trong hóa đơn</h2>

            <div class="table-responsive">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                ID hóa đơn
                            </th>
                            <th style="color:white">
                                Tên mặt hàng
                            </th>
                            <th style="color:white">
                                Số lượng
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DonDatHang.IDDDH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MatHang.TenMH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoluongMH)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminChiTietDonDatHangs/Details/@item.IDChiTietDDH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>

                                    @* <a href="~/Admin/AdminChiTietDonDatHangs/Details/@item.IDChiTietDDH">
                                            <button id="myBtn" type="button" class="btn btn-outline-danger btn-fw"> Xem đánh giả sản phẩm</button>
                                        </a>

                                    *@

                                    <button type="button" class="btn btn-outline-danger btn-fw" data-toggle="modal" data-target="#DanhGia-@item.IDChiTietDDH">Xem đánh giá sản phẩm </button>

                                    <!-- Modal -->
                                    <div id="DanhGia-@item.IDChiTietDDH" class="modal fade" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content" style="background-color:white;color:black">
                                                <div class="modal-header">
                                                    <h4 class="modal-title">Bình luận của khách hàng</h4>
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                </div>
                                                <div class="modal-body">
                                                    @if (item.BinhLuan == null && item.DanhGiaSanPham == null)
                                                    {
                                                        <p>
                                                            Sản phẩm chưa có bình luận
                                                        </p>
                                                    }
                                                    else
                                                    {                                                
                                                <p>Đánh giá của khách hàng:  @item.DanhGiaSanPham ★</p>
                                                        <label>Bình Luận: @item.BinhLuan</label>
                                                    }
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" style="color:black" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

