@model WebBanDoDienTu.Models.Admin

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}





<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin Admin</h4>

            <form class="forms-sample">
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">ID Admin</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.IDAdmin)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên Admin</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.TenAdmin)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Số điện thoại</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.SDT)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Địa chỉ</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.DiaChi)
                    </div>
                </div>

                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Ngày sinh</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.NgaySinh)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Username</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="form-group row">
                    <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Passwod</label>
                    <div class="col-sm-9">
                        @Html.DisplayFor(model => model.Password)
                    </div>
                </div>
                <!--<a href="~/Admin/AdminsManager/Edit/@Model.IDAdmin">
                <button style="width:100px; type="submit" class="btn btn-primary mr-2">Edit</button>

                </a>-->
            
                <a href="~/Admin/AdminsManager/Edit/@Model.IDAdmin">
                    <button style="min-width:120px;height:30px" type="button" class="btn btn-primary mr-2">Edit</button>
                </a>

                <a href="~/Admin/AdminsManager/Index">
                    <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                </a>
            </form>
        </div>
    </div>
</div>