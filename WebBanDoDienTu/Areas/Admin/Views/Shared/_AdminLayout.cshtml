    <!-- đoạn code jquery này dùng để có dấu phẩy trong giá của sản phẩm của bên bộ phận Admin-->
    <script>
    function numberWithCommas(x) {
            return x.toString().replace(/\B(?=(?:\d{3})+(?!\d))/g, ",");
        }


        $('.money').each(function () {
            var v_pound = $(this).html();
            v_pound = numberWithCommas(v_pound);

            $(this).html(v_pound)

        })</script>
