@using WebBanDoDienTu.Areas.Admin.Models;
@{
    ViewBag.Title = "Index home";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<ThongKeTheoKhachHang> tk1 = ViewBag.TktheoKhachHang;
    List<ThongKeTheoSanPham> tk2 = ViewBag.TkTheoSanPham;
}

<div class="content-wrapper" style="margin-bottom:20px">
    <div class="row">
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Đơn đặt hàng đang chờ xác nhận</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.SoHoaDonDangCho</h2>
                            </div>
                            <h6 class="text-muted font-weight-normal">Có @ViewBag.SoHoaDonDangCho đang chờ để xác nhận</h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Đơn đặt hàng</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.TongSoHoaDon</h2>

                            </div>
                            <h6 class="text-muted font-weight-normal">Có tổng cộng @ViewBag.TongSoHoaDon hóa đơn</h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Mặt hàng</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.TongSoMatHang</h2>
                            </div>
                            <h6 class="text-muted font-weight-normal">Tổng số hàng hóa trong của hàng </h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-monitor text-success ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Thể loại mặt hàng</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.TongSoTheLoai</h2>
                            </div>
                            <h6 class="text-muted font-weight-normal">Tổng số thể loại hàng trong của hàng</h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-monitor text-success ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Khách hàng</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.TongSoKhachHang</h2>
                            </div>
                            <h6 class="text-muted font-weight-normal">Tổng số khách hàng có tài khoản</h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h5>Đơn đặt hàng</h5>
                    <div class="row">
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            <div class="d-flex d-sm-block d-md-flex align-items-center">
                                <h2 class="mb-0">@ViewBag.TongSoHoaDon</h2>

                            </div>
                            <h6 class="text-muted font-weight-normal">Có tổng cộng @ViewBag.TongSoHoaDon hóa đơn</h6>
                        </div>
                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                            <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Thống kê doanh thu theo khách hàng trong một tuần qua</h2>


                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="color:white">
                                    Tên khách hàng
                                </th>
                                <th style="color:white">
                                    Số lượng hàng hóa đã mua
                                </th>
                                <th style="color:white">
                                    Số tiền đã trả
                                </th>
                                <th style="color:white">
                                    Doanh thu
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in tk1)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenKhachHang)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuongHangHoaDaMua)
                                    </td>
                                    <td>
                                        <div class="money"> @item.SoTienThuVeTuKhachHang VND</div>
                                    </td>
                                    <td>
                                        <div class="money">@Html.DisplayFor(modelItem => item.DoanhThuChoKhachHang) VND </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>




    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Thống kê doanh thu theo sản phẩm trong một tuần qua</h2>
                <div class="table-responsive">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="color:white">
                                    Tên sản phẩm
                                </th>

                                <th style="color:white">
                                    Số lượng hàng hóa đã mua
                                </th>
                                <th style="color:white">
                                    Số tiền đã trả
                                </th>

                                <th style="color:white">
                                    Doanh thu
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in tk2)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSanPham)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuongHangHoaBanDuoc)
                                    </td>
                                    <td>
                                        <div class="money"> @item.SoTienHangHoaThuVe VND</div>
                                    </td>
                                    <td>
                                        <div class="money">@Html.DisplayFor(modelItem => item.DoanhThuChoHangHoa) VND </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>




</div>