@model IEnumerable<WebBanDoDienTu.Areas.Admin.Models.ThongKeTheoKhachHang>
@{
    ViewBag.Title = "ThongKeDoanhThuTheoKhachHangLe";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Thống kê doanh thu theo khách hàng</h2>

            <div class="table-responsive">
                <form>
                    <div>
                        <div style="display:inline-block;margin-top:20px;margin-right:30px">
                            <h4>Ngày bắt đầu</h4>
                            <input type="date" class="form-control" placeholder="Ngày bắt đầu" name="NgayBatDau" style="width: 300px">
                        </div>
                        <div style="display:inline-block">
                            <h4>Ngày kết thúc</h4>
                            <input type="date" class="form-control" placeholder="Ngày kết thúc" name="NgayKetThuc" style="width: 300px">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary btn-fw" style="margin-top:20px">Thống kê</button>
                    </div>
                </form>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Tên khách hàng không có tài khoản
                            </th>

                            <th style="color:white">
                                Số lượng hàng hóa đã mua
                            </th>
                            <th style="color:white">
                                Số tiền đã trả
                            </th>

                            <th style="color:white">
                                Doanh thu
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKhachHang)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuongHangHoaDaMua)
                                </td>
                                <td>
                                    <div class="money"> @item.SoTienThuVeTuKhachHang VND</div>
                                </td>
                                <td>
                                    <div class="money">@Html.DisplayFor(modelItem => item.DoanhThuChoKhachHang) VND </div>
                                </td>

                            </tr>
                        }
                        <tr>

                            <td>Tổng khách hàng: @ViewBag.TongKhachHang</td>
                            <td>Tổng hàng hóa: @ViewBag.TongHangHoa</td>
                            <td></td>
                            <td class="money">Tổng thu nhập nhận: @ViewBag.TongThuNhap VND</td>

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

