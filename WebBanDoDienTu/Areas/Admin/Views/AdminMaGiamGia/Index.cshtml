@model IEnumerable<WebBanDoDienTu.Models.MaGiamGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách Mã Giảm Giá</h2>

            <a href="~/Admin/AdminMaGiamGia/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một mã giảm giá mới</button>
            </a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Mã giảm giá
                            </th>
                            <th style="color:white">
                                Tên mã giảm giá
                            </th>
                            <th style="color:white">
                                Ngày bắt đầu giảm
                            </th>
                            <th style="color:white">
                                Ngày kết thúc giảm
                            </th>
                            <th style="color:white">
                                Số tiền giảm
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDMaGiamGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenMaGiamGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayBatDauGiamGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayKetThucGiamGia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoTienGiam)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminMaGiamGia/Details/@item.IDMaGiamGia">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminMaGiamGia/Edit/@item.IDMaGiamGia">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminMaGiamGia/Delete/@item.IDMaGiamGia">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
