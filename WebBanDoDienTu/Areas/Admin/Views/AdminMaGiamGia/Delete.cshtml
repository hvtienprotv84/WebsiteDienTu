@model WebBanDoDienTu.Models.MaGiamGia
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Bạn có thực sự muốn xóa mã giảm giá này không?</h3>
                <h4 class="card-title">Chi tiết mã giảm giá</h4>

                <form class="forms-sample">
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">ID mã giảm giá</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.IDMaGiamGia)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên mã giảm giá</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.TenMaGiamGia)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Ngày bắt đầu giảm giá</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NgayBatDauGiamGia)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Ngày kết thúc giảm giá</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.NgayKetThucGiamGia)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Số tiền giảm giá</label>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.SoTienGiam)
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button style="width:180px; type="submit" value="Delete" class="btn btn-primary mr-2">Delete</button>
        </div>
    }

    <a href="~/Admin/AdminMaGiamGia/Index">
        <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
    </a>
</div>

