@model WebBanDoDienTu.Models.PhuongThucThanhToan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bạn muốn chỉnh sửa phương thức thanh toán</h4>

                <form class="forms-sample">
                    <div class="form-group row">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IDPT)

                        <label for="exampleInputUsername2" class="col-sm-3 col-form-label">Tên phương thức</label>
                        <div class="col-sm-9">
                            @Html.EditorFor(model => model.TenPT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenPT, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <button style="width:100px; type="submit" value="Save" class="btn btn-primary mr-2">Save</button>

                    <a href="~/Admin/AdminPhuongThucThanhToans/Index">
                        <button type="button" class="btn btn-outline-secondary btn-lg btn-block" style="width:300px; margin-top:40px">Trở về</button>
                    </a>


                </form>
            </div>
        </div>
    </div>
}
