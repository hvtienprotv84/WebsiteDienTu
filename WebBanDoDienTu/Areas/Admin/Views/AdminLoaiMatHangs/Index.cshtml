@model IEnumerable<WebBanDoDienTu.Models.LoaiMatHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Danh sách loại mặt hàng</h2>

            <a href="~/Admin/AdminLoaiMatHangs/Create">
                <button type="button" class="btn btn-primary btn-fw">Tạo một loai mặt hàng mới</button>
            </a>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Tên loại mặt hàng
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenLoaiMH)
                                </td>
                                <td>
                                    <a href="~/Admin/AdminLoaiMatHangs/Details/@item.IDLoaiMH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-success btn-fw">Details</button>
                                    </a>
                                    <a href="~/Admin/AdminLoaiMatHangs/Edit/@item.IDLoaiMH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-warning btn-fw">Edit</button>
                                    </a>
                                    <a href="~/Admin/AdminLoaiMatHangs/Delete/@item.IDLoaiMH">
                                        <button style="min-width:50px" type="button" class="btn btn-outline-danger btn-fw">Delete</button>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
